{
    "name": "coronavirus-presence",
    "repository": {
        "type": "git",
        "url": "https://github.com/antiafk/coronavirus-presence.git"
    },
    "version": "2.0.0",
    "description": "Shows the status of the Covid-19 on your Discord Rich Presence",
    "main": "index.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "author": "antiafk",
    "license": "MIT",
    "dependencies": {
        "cheerio": "^1.0.0-rc.3",
        "discord-rpc": "^3.1.3",
        "node-fetch": "^2.6.1"
    },
    "devDependencies": {
        "electron": "^10.4.1",
        "electron-builder": "^22.10.5"
    },
    "build": {
        "appId": "io.github.antiafk.coronavirus-presence",
        "productName": "Coronavirus Presence",
		"artifactName": "${name}-${platform}-${arch}-${version}.${ext}",
        "asar": "true",
        "directories": {
            "output": "dist"
        },
        "extraFiles": [
            {
                "from": "resources/icon.ico",
                "to": "resources"
            }
        ],
        "win": {
            "target": [
                {
                    "target": "portable",
                    "arch": "ia32"
                }
            ],
            "icon": "resources/icon.ico"
        }
    }
}